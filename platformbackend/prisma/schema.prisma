generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    Int     @id @default(autoincrement())
  Username String  @unique
  password    String
  accounttype accounttype 
  offers     Offer[]
  applicatioms Application[]
}

model Offer {
  id Int  @id @default(autoincrement())
  recruter Int 
  title String
  Company String
  recruter_id User @relation(fields: [recruter], references: [id], onDelete: Cascade)
  applications     Application[]
}

model Application {
  id Int  @id @default(autoincrement())
  name String
  email String
  phonenumber String
  apllicant Int
  apllicant_id User @relation(fields: [apllicant], references: [id], onDelete: Cascade)
  offer Int
  offer_id Offer @relation(fields: [offer], references: [id], onDelete: Cascade)
  @@unique([offer, apllicant])
}

enum accounttype {
    recruter
    applicant
}